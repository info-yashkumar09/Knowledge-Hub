<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Web3Details">

    <TextView
        android:id="@+id/page2title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="28sp"
        android:background="#CA4DFF"
        android:text="Web3.0 Development" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:text="Dive into decentralized apps and blockchain-powered web solutions."/>

    <ImageView
        android:id="@+id/androidImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/web3logo" />

</LinearLayout>